<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Emp">

<!-- 수동 매핑을 위한 resultMap -->
<resultMap type="Emp" id="empMap">
	<id column="empno" property="empno"/>
	<result column="ename" property="ename"/>
	<result column="sal" property="sal"/>
	<result column="hiredate" property="hiredate"/>
	<association column="deptno" property="dept" javaType="Dept" select="Dept.select"/>

</resultMap>



<insert id="insert">
	insert into emp(empno, ename, sal, deptno) values (seq_emp.nextval, #{ename}, #{sal}, #{dept.deptno})
</insert>


<!-- 사원 목록 가져오기 
	deptno 컬럼은 Emp가 보유한 Dept 객체에 자동으로 매핑이 되지않기 때문에 개발자가 수동으로 매핑을 처리한다
	resultMap
-->


<select id="selectAll" resultMap="empMap">
	select empno, ename, sal, hiredate, deptno from emp
</select>


 <select id="select" resultMap="empMap" parameterType="int" >
	select * from emp where empno=#{empno}
</select> 
</mapper>